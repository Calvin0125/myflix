%section.my_queue.container
  .row
    .col-sm-10.col-sm-offset-1
      %article
        %header
          %h2 My Queue
        = form_tag(queue_items_update_path, method: :put) do
          %table.table
            %thead
              %tr
                %th(width="10%") List Order
                %th(width="30%") Video Title
                %th(width="10%") Play
                %th(width="20%") Rating
                %th(width="15%") Genre
                %th(width="15%") Remove
            %tbody
              - @queue_items.each do |item|
                %tr
                  %td
                    %input.form-control(type="text" value="#{item.position}" name="positions[#{item.position}]")
                  %td
                    = link_to "#{item.video.title}", video_path(item.video)
                  %td
                    = button_to "Play", nil, class: "btn btn-default"
                  %td
                    - review = item.video.reviews.where(user: current_user).first
                    - if review.nil?
                      = select(review, :rating, review_rating_options, { include_blank: true }, { class: 'form-group' })
                    - else
                      = select(review, :rating, review_rating_options, { selected: review.rating }, { class: 'form-group' })
                  %td
                    = link_to "#{item.video.category.name}", show_category_path(item.video.category)
                  %td
                    = link_to "x", queue_items_destroy_path(item.id), method: :delete, class: "remove"
          = submit_tag("+ Update Instant Queue", class: "btn btn-default")