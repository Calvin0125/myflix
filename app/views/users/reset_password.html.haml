%section.reset_password.container
  .row
    .col-sm-10.col-sm-offset-1
      = form_tag("/reset_password") do
        %header
          %h1 Reset Your Password
        %fieldset.form-group
          %label(for="password") New Password
          .row
            .col-sm-4
              %input.form-control(type="hidden" name="user[token]" value="#{@user.token}")
              %input.form-control(type="password" name="user[password]" id="password")
        %fieldset.form-group.action
          %input(type="submit" value="Reset Password" class="btn btn-default")